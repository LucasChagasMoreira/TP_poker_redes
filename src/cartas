naipes = ['Copas', 'Paus', 'Espadas', 'Ouros']
valores = ['√Ås', '2', '3', '4', '5', '6', '7', '8', '9', '10', 'Valete', 'Rainha', 'Rei']

baralho = []

for naipe in naipes:
    for valor in valores:
        carta = (valor, naipe)
        baralho.append(carta)

# Mostrar o baralho completo
for carta in baralho:
    print(carta)

